<div class="container my-5">
  <div class="card">
    <div class="card-header">Patient Info<%= link_to('Back', patients_path, class: "btn btn-primary float-right btn-sm") %></div>
    <br>
    <center>
      <%= @patient.image.valid? == true ? 
          image_tag(@patient.image, width: '150px') : image_tag("/images/person.jpg", width: '150px') %>
    </center>
    <div class="card-body">
      <table class="table table-striped table-bordered mt-1">
        <tr>
          <th scope="row">ID</th>
          <td><%= @patient.id %></td>
        </tr>
        <tr>
          <th scope="row">Name</th>
          <td><%= @patient.name %></td>
        </tr>
        </tr>
          <th scope="row">Assigned Facilty</th>
          <td><%= @patient.facility.name %></td>
        </tr>
        <tr>
          <th scope="row">Cid</th>
          <td><%= @patient.cid == 0 ? 'No Criminal Recoed' : 'Criminal Record' %></td>
        </tr>
        <tr>
          <th scope="row">Status</th>
          <td><%= @patient.active == 1 ? 'Sick' : 'Recovered' %></td>
        </tr>
          <th scope="row">Phone Number</th>
          <td><%= @patient.phone_number %></td>
        </tr>
        <tr>
          <th scope="row">Joining Date</th>
          <td><%= @patient.joining_date %></td>
        </tr>
        <tr>
          <th scope="row">Releasing Date</th>
          <td><%= @patient.release_date %></td>
        </tr>
        <tr>
        <tr>
          <th scope="row">Diseases</th>
          <td><%= @patient.diseases %></td>
        <tr>
          <th scope="row">Account Created</th>
          <td><%= time_ago_in_words @patient.created_at %> ago </td>
        </tr>
      </table>
    </div>
  </div>
</div>