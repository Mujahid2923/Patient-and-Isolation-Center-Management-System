<div class="container my-5">
  <div class="card">
    <div class="card-header">Transferred Patient List<%= link_to('Back to Dashboard', user_dashboard_path(current_user.id), class: "btn btn-secondary float-right btn-sm") %></div>
    <% if @transfered_list.empty? == true %>
      <%= render template: "pages/empty" %>
    <% else %>
      <div class="card-body">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Image</th>
              <th scope="col">Phone</th>
              <th scope="col">Where They are Transferred</th>
              <th scope="col">Transfer Date</th>
            </tr>
          </thead>
          <tbody>
          <% @transfered_list.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= Patient.find(t.patient_id).name %></td>
              <td><%= Patient.find(t.patient_id).image.valid? == true ?
                      image_tag(Patient.find(t.patient_id).image, width: '50px') :  image_tag("/images/person.jpg", width: '50px') %></td>
              <td><%= Patient.find(t.patient_id).phone_number %></td>
              <td><%= t.transfered_facility %></td>
              <td><%= t.date %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
