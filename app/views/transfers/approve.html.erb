<div class="container my-5">
  <div class="card">
      <div class="card-body">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Transfered facility</th>
              <th scope="col">Date</th>
              <th scope="col">Patient Id</th>
              <th scope="col">Patient Name</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @transfer.each do |t| %>
              <tr>
                <td><%= t.id %></td>
                <td><%= Facility.find(t.to_facility).name %></td>
                <td><%= t.date %></td>
                <td><%= t.patient_id %></td>
                <td><%= Patient.find(t.patient_id).name %></td>
                <td>
                  <%= link_to('Approve', transfer_path(t.id), class: "btn btn-success btn-sm") %>
                  <%= link_to(
                        'Cancel',
                        transfer_path(t.id),
                        method: :delete,
                        data: { confirm: 'Do you want to delete this Patient?' },
                        class: "btn btn-danger btn-sm",
                      ) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <br><div><%= link_to('Back', root_path, class: "btn btn-primary float-left btn-sm") %></div><br>
      </div>
  </div>
</div>